{% extends 'figure/create.html.twig' %}


{% block title %}
    Modification d'une figure
{% endblock %}

{% block form_title %}
    <div class="text-center">
        <h1>Modification de la figure : {{ figure.title }}</h1>
    </div>
{% endblock %}

{% block form_cover_edit %}
    {% if figure.cover %}
        <div id="form-trick-cover">
            {{ form_label(form.cover) }}
            <ul>
                <li class="trick-image">
                    <img class="img-thumbnail" alt="{{ figure.cover.name }}" src="{{ figure.cover.filePath }}">
                    <div class="action-trick-image">
                        <a href="" class="deleteTrickCoverButton" data-bs-toggle="modal"
                           data-bs-target="#deleteTrickCoverModal">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                 stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"></path>
                            </svg>
                        </a>
                    </div>
                </li>
            </ul>
            {{ include('figure/_partials/delete-trick-cover-modal.html.twig') }}
        </div>
    {% endif %}

{% endblock %}

{% block form_pictures_edit %}
    <ul>
        {% if figure.pictures %}
            {% for mediaObject in figure.pictures %}
                <li class="trick-image">
                    <img class="img-thumbnail" alt="{{ mediaObject.name }}" src="{{ mediaObject.filePath }}">
                    <div class="action-trick-image">
                        <a href="#" class="deleteTrickImgButton" data-figure-id="{{ figure.id }}"
                           data-mediaobject-id="{{ mediaObject.id }}" data-bs-toggle="modal"
                           data-bs-target="#deleteTrickImageModal">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"></path>
                            </svg>
                        </a>
                    </div>
                </li>
            {% endfor %}
        {% endif %}
    </ul>

    {{ include('figure/_partials/delete-trick-images-modal.html.twig') }}

{% endblock %}